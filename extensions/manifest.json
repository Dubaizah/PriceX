{
  "manifest_version": 3,
  "name": "PriceX - Smart Price Tracker",
  "version": "1.0.0",
  "description": "Track prices, get alerts, and earn cashback while you shop. The smartest shopping companion.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.walmart.com/*",
    "*://*.bestbuy.com/*",
    "*://*.target.com/*",
    "*://*.ebay.com/*",
    "*://*.pricex.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PriceX"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.walmart.com/*",
        "*://*.bestbuy.com/*",
        "*://*.target.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "commands": {
    "track-price": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Track current product price"
    },
    "find-alternative": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Find alternative products"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
