{
  "name": "PriceX",
  "displayName": "PriceX - Global AI-Powered Pricing Authority",
  "expo": {
    "name": "PriceX",
    "slug": "pricex-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pricex.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "PriceX needs camera access to scan barcodes",
        "NSPhotoLibraryUsageDescription": "PriceX needs photo access to save product images",
        "NSLocationWhenInUseUsageDescription": "PriceX uses your location to show local deals"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.pricex.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "USE_BIOMETRIC",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#FFD700"
        }
      ]
    ]
  }
}
